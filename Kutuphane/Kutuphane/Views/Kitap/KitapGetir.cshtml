@model Kutuphane.Models.Entity.KITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div class="form-group">
        <label>Kitap ID</label>
        @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kategori</label>
        @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.deger1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.deger2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Basım Yılı</label>
        @Html.TextBoxFor(y => y.BASIMYIL, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yayın Evi</label>
        @Html.TextBoxFor(y => y.YAYINEVI, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Sayfa</label>
        @Html.TextBoxFor(y => y.SAYFA, new { @class = "form-control" })
    </div>
    
    <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
}

